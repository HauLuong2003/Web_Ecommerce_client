@page "/brand-list"

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Product List</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <p><a class="btn btn-success float-end" href="/add-brand"> Add New Brand </a></p>
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header"></div>
                            @if (brandList == null || !brandList.Any())
                            {
                                <div class="alert alert-info">There are no Brands available.</div>
                            }
                            else
                            {
                                <div class="card-body">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Name</th>
                                                <th>Logo</th>
                                                <th>Edit</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Brand brand in brandList)
                                            {
                                                <tr>
                                                    <td>@brand.BrandId</td>
                                                    <td>@brand.BrandName</td>

                                                    <td>
                                                        <img src="@brand.BrandLogo" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                                                    </td>

                                                    <td>
                                                        <a class="btn btn-success" href="/Product/edit/@brand.BrandId"> Edit </a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-danger" href="/Product/delete/@brand.BrandId"> Delete </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@code {
    public List<Brand> brandList { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        brandList = await brandService.GetAllBrands();

    }
}
